<ul class="list-group">
  {{#each mailboxes as |mailbox|}}
    {{#link-to 'shell.mail.mailbox' mailbox.name class='list-group-item' classNameBindings='mailbox.mayReadItems::disabled' tagName='li'}}
      {{mailbox.name}}
      {{#if mailbox.unreadThreads}}
        <span class="badge">{{mailbox.unreadThreads}}</span>
      {{/if}}
    {{/link-to}}
  {{/each}}
</ul>
